<%= form_for(@patient) do |f| %>

  <% if @patient.errors.any? %>
    <div id="error_explanation">
    <br>
      <p><%= pluralize(@patient.errors.count, "errores") %> impiden que el paciente pueda ser ingresado:</p>
      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <br>
      <% end %>
      </ul>
    </div>
  <% end %>
    <table class="table">
      <tbody>
      <tr>
        <td>
          <div>
            Nombre
            <%= f.text_field(:nombre, class: "form-control", placeholder: "") %>
          </div>
          <div>
            Apellido
            <%= f.text_field(:apellido, class: "form-control", placeholder: "") %>
          </div>
          <div>
            C.I.
            <%= f.text_field(:ci, class: "form-control", placeholder: "") %>
          </div>
          <div>
            FNR
            <%= f.text_field(:fnr, class: "form-control", placeholder: "") %>
          </div>
        
          <div>
            Sexo
            <%= f.select(:sexo, options_for_select(['Masculino','Femenino']), {}, {class: "form-control"}) %>
          </div>
          <div>

          Fecha Nacimiento
              <div class="input-daterange">
                   <%= f.date_field :f_nacimiento, class: "form-control", placeholder: "" %>
              </div>
          Fecha Igreso al Programa de Trasplante
              <div class="input-daterange">
                   <%= f.date_field :f_ingreso, class: "form-control", placeholder: "" %>
              </div>

          <div>
            Prestador
            <%= f.select(:prestador, options_for_select(['ASSE','MUCAM','ASOC ESPAÃ‘OLA','CIRCULO CATOLICO','CASA GALICIA','CASMU','GREMCA','GREMEDA','AMECOM','AMEDRIN','AMSJ','CAAMEPA','CAMCEL','CAMDEL','CAMEC','CAMEDUR','CAMOC','CAMS','CASMER','COMECA','COMEF','COMEFLO','COMEPA','COMERI','COMERO','COMTA','COPAMHI','CRAME','CRAMI','IAC','SMQS','COSEM','CUDAM','EVANGELICO','SMI','UNIVERSAL SPS','SEGURO BRITANICO','SEGURO AMERICANO','BLUECROSS','MP','SUMMUM']), {}, {class: "form-control"}) %>
          </div>  

          </div>
     
          <div>
            Procedencia
            <%= f.select(:procedencia, options_for_select(['Dato no disponible', 'Montevideo', 'Canelones','Paysandu', 'Salto', 'Artigas', 'Rio Negro','Soriano', 'Colonia', 'San Jose', 'Florida', 'Flores', 'Durazno', 'Rivera', 'Tacuarembo', 'Cerro Largo', 'Rocha', 'Maldonado', 'Lavalleja', 'Treinta y Tres']), {}, {class: "form-control"}) %>
          </div>
          <div>
            Comentarios
            <%= f.text_field(:comentarios, class: "form-control", placeholder: "") %>
          </div>
        </td>
      </tr>


      </tbody>
    </table>

  <div>
    <%= f.submit('Confirmar', class: 'btn btn-primary') %>
    <%= link_to 'Atras', patients_path, class: 'btn btn-default' %>
  </div>
<% end %>
 


