    <div>
      RGE/Gastritis/Ulcus GD
       <%= f.select(:rge_gastritis_ulcus, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Alergias
       <%= f.select(:alergias, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Cirug√≠a Abdominal Previa
       <%= f.select(:cirugia_abdominal, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>

      <div class="field">
        <%= f.label 'Comentarios' %><br>
        <%= f.text_area :comentarios %>
      </div>
      <div>
        <%= f.submit('Confirmar', class: 'btn btn-primary') %>|
        <%= link_to 'Atras', patients_path, class: 'btn btn-default' %>
      </div>

  <% end %>

</div>
