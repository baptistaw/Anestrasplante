<h1>Editar Antecedentes Personales</h1>

      <%= form_for ([@patient, @patient.antecedents.build]) do |f| %>


    <div>
      Enfermedad Coronaria
       <%= f.select(:enf_coronaria, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>

    <div>
      HTA
       <%= f.select(:hta, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Valvulopatia
       <%= f.select(:valvulopatia, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Arritmias/Marcapaso
       <%= f.select(:arritmias_marcapaso, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Fumador
       <%= f.select(:fumador, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      EPOC
       <%= f.select(:epoc, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Asma
       <%= f.select(:asma, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Nefropatia/Uropatia
       <%= f.select(:nefropatia_uropatia, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Diabetes
       <%= f.select(:diabetes, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Hipotiroidismo
       <%= f.select(:hipotiroidismo, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
    </div>
    <div>
      Hipertiroidismo
       <%= f.select(:hipertiroidismo, options_for_select(['No','SI']), {}, {class: "form-control"}) %>
